<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/view_main_1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/li_main_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_60"
        android:layout_below="@+id/view_main_1"
        android:background="@color/white"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/iv_main_memu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_jy_60"
            android:scaleType="centerInside"
            android:src="@mipmap/black_fh" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="套餐"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_repair_xq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_jy_50"
            android:scaleType="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/li_main_bt"
        android:background="#f5f5f5" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_packages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/li_main_bt"
        android:foregroundGravity="center"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/dp_jy_50"

        >

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_buy_package"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_45"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginRight="@dimen/dp_jy_12"
        android:layout_marginBottom="@dimen/dp_jy_30"
        android:background="@drawable/bg_login1"
        android:gravity="center"
        android:text="购买套餐"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>
