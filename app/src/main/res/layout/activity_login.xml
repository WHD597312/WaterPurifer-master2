<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_bj"
        android:scaleType="centerCrop"
        />


    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_bj1"
        android:layout_marginTop="@dimen/dp_jy_114"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_jy_5"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_toRightOf="@+id/image_user"
            android:layout_alignTop="@+id/image_user"
            android:background="@null"
            android:digits="1234567890"
            android:hint="请输入帐户"
            android:inputType="phone|number"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="@dimen/sp_18" />


        <ImageView
            android:id="@+id/image_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_jy_48"
            android:layout_marginTop="@dimen/dp_jy_135"
            android:src="@mipmap/login_user"
            android:scaleType="centerInside"
        />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_1"
            android:layout_below="@+id/et_name"
            android:layout_marginLeft="@dimen/dp_jy_48"
            android:layout_marginRight="@dimen/dp_jy_48"
            android:background="@color/color_gray2" />

        <EditText
            android:id="@+id/et_pswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view5"
            android:layout_marginBottom="@dimen/dp_jy_5"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_marginTop="@dimen/y23"
            android:layout_toRightOf="@+id/image_pswd"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            />

        <ImageView
            android:id="@+id/image_seepwd"
            android:layout_width="@dimen/dp_jy_30"
            android:layout_height="@dimen/dp_jy_30"
            android:layout_alignBottom="@+id/view3"
            android:layout_alignParentRight="true"
            android:src="@mipmap/login_seeno"
            android:layout_marginRight="@dimen/dp_jy_40"
            android:scaleType="centerInside"
            />

        <ImageView
            android:id="@+id/image_pswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_user"
            android:src="@mipmap/login_pass"
            android:layout_marginLeft="@dimen/dp_jy_48"
            android:layout_alignTop="@+id/et_pswd"
            android:scaleType="centerInside"
       />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_1"
            android:layout_below="@+id/et_pswd"
            android:layout_marginLeft="@dimen/dp_jy_48"
            android:layout_marginRight="@dimen/dp_jy_48"
            android:background="@color/color_gray2" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_alignLeft="@+id/image_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_pswd"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/dp_jy_2"
            android:gravity="center"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/sp_14"
            android:text="立即注册" />

        <TextView
            android:id="@+id/tv_forget_pswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_register"
            android:layout_marginRight="@dimen/dp_jy_48"
            android:gravity="center"
            android:textColor="#5c5c5c"
            android:textSize="@dimen/sp_14"
            android:text="忘记密码" />




        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_45"
            android:layout_below="@+id/tv_register"
            android:layout_marginLeft="@dimen/dp_jy_48"
            android:layout_marginRight="@dimen/dp_jy_48"
            android:layout_marginTop="@dimen/dp_jy_35"
            android:background="@drawable/bg_login1"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18"


            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/rl_login"
        android:layout_marginTop="-25dp"
        />
    <ImageView
        android:id="@+id/iv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_app_logo"
        android:layout_marginTop="@dimen/dp_jy_5"
        />

</RelativeLayout>
