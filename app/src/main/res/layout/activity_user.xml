<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_main_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/li_main_bt"
            android:layout_below="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/iv_main_memu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_jy_60"
                android:layout_weight="1"
                android:src="@mipmap/black_fh"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="个人中心"
                android:textSize="@dimen/sp_18"
                android:textColor="#333333"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:paddingLeft="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_user_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:background="@color/white"
        android:layout_below="@+id/li_main_bt"
        >
        <RelativeLayout
            android:id="@+id/rl_user_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            />
        <ImageView
            android:id="@+id/iv_user_name1"
            android:layout_width="@dimen/dp_jy_30"
            android:layout_height="@dimen/dp_jy_30"
            android:src="@mipmap/water_tx"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_jy_12"
            />
        <View
            android:id="@+id/view_repir_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_user_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/rl_user_pic"
            >
            <TextView
                android:id="@+id/tv_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="133****33"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />
            <View
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                 android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_user_cpass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/rl_user_type"
            >
            <TextView
                android:id="@+id/tv_repair_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />
            <View
                android:id="@+id/view_repir_3"
                android:layout_width="match_parent"
                android:background="#f5f5f5"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_user_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/rl_user_cpass"
            >
            <TextView
                android:id="@+id/tv_repair_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改地址"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/iv_rep_bz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />

            <TextView
                android:id="@+id/tv_user_adresxq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_rep_bz1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_marginRight="@dimen/dp_jy_10"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <View
                android:id="@+id/view_repir_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
               android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_jy_20"
                />
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/bt_user_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_40"
        android:layout_below="@id/rl_user_1"
        android:layout_marginLeft="@dimen/dp_jy_15"
        android:layout_marginRight="@dimen/dp_jy_15"
        android:layout_marginTop="@dimen/dp_jy_35"
        android:background="@drawable/bg_login1"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

    </RelativeLayout>

