<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_main_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/li_main_bt"
            android:layout_below="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/iv_main_memu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:src="@mipmap/black_fh"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="修改地址"
                android:textSize="@dimen/sp_18"
                android:textColor="#333333"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:paddingLeft="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_user_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:background="@color/white"
        android:layout_below="@+id/li_main_bt"
        >
        <RelativeLayout
            android:id="@+id/rl_user_cpass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            >
            <TextView
                android:id="@+id/tv_bz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前地址："
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/tv_chang_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_bz1"
                android:layout_marginLeft="@dimen/dp_jy_20"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_user_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/rl_user_cpass"
            >
            <TextView
                android:id="@+id/tv_repair_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择地址"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/iv_rep_bz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />

            <TextView
                android:id="@+id/tv_user_adresxq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_rep_bz1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_marginRight="@dimen/dp_jy_10"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <View
                android:id="@+id/view_repir_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
               android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_jy_20"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/et_address_adressxq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_40"
            android:layout_below="@+id/rl_user_address"
            android:layout_margin="@dimen/dp_jy_13"
            android:background="#f5f5f5"
            android:hint="详细地址"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_jy_5"
            android:paddingLeft="@dimen/dp_jy_12"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_adress_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_40"
        android:layout_below="@+id/rl_user_1"
        android:background="@drawable/bg_login1"
        android:layout_marginTop="@dimen/dp_jy_40"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    </RelativeLayout>

