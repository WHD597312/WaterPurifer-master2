<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_main_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/li_main_bt"
            android:layout_below="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/iv_main_memu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_jy_60"
                android:layout_weight="1"
                android:src="@mipmap/black_fh"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="报修"
                android:textSize="@dimen/sp_18"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/iv_repair_xq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:paddingLeft="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:src="@mipmap/weixu_tb"
                android:layout_gravity="center"
                />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_repair_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_jy_13"
        android:layout_marginRight="@dimen/dp_jy_13"
        android:layout_marginTop="@dimen/dp_jy_13"
        android:background="@color/white"
        android:layout_below="@+id/li_main_bt"
        >
        <RelativeLayout
            android:id="@+id/rl_repair_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_48">
        <TextView
            android:id="@+id/tv_repair_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称"
            android:layout_marginLeft="@dimen/dp_jy_12"
             android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_repair_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_rep_bz"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_jy_12"
            android:textSize="@dimen/sp_13"
            android:textColor="#666666"
            />
            <ImageView
                android:id="@+id/iv_rep_bz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />
        <View
            android:id="@+id/view_repir_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_repair_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_48"
            android:layout_below="@+id/rl_repair_name"
            >
            <TextView
                android:id="@+id/tv_repair_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障类型"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/iv_rep_bz3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />
            <TextView
                android:id="@+id/tv_repair_gz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_rep_bz3"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                android:textColor="#666666"
                />

            <View
                android:id="@+id/view_repir_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_repair_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_48"
            android:layout_below="@id/rl_repair_type"
            >
            <TextView
                android:id="@+id/tv_repair_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/tv_repair_repir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_rep_bz2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_marginRight="@dimen/dp_jy_10"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/iv_rep_bz2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />
            <View
                android:id="@+id/view_repir_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_repair_adres"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_48"
            android:layout_below="@id/rl_repair_time"
            >
            <TextView
                android:id="@+id/tv_repair_adres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备地址"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/iv_rep_bz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />
            <TextView
                android:id="@+id/tv_repair_adresxq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_rep_bz1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_marginRight="@dimen/dp_jy_10"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <View
                android:id="@+id/view_repir_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/et_repair_adressxq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_40"
            android:layout_below="@+id/rl_repair_adres"
            android:layout_margin="@dimen/dp_jy_13"
            android:background="#f5f5f5"
            android:hint="详细地址"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_jy_5"
            android:paddingLeft="@dimen/dp_jy_12"
            />

        <EditText
            android:id="@+id/et_repair_ms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_130"
            android:layout_below="@+id/et_repair_adressxq"
             android:layout_marginTop="@dimen/dp_jy_5"
            android:layout_marginRight="@dimen/dp_jy_13"
            android:layout_marginLeft="@dimen/dp_jy_13"
            android:layout_marginBottom="@dimen/dp_jy_10"
            android:background="#f5f5f5"
            android:hint="具体描述"
            android:gravity="start"
            android:textSize="@dimen/sp_14"
            android:paddingTop="@dimen/dp_jy_5"
            android:paddingLeft="@dimen/dp_jy_12"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_repair_qd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_repair_1"
        android:layout_marginLeft="@dimen/dp_jy_13"
        android:layout_marginRight="@dimen/dp_jy_13"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:background="@drawable/bg_login1"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

    </RelativeLayout>

