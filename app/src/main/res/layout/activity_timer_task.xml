<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TimerTaskActivity"
    android:background="@color/white"
    >

    <View
        android:id="@+id/view_main_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_25"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/head_title"
        android:layout_below="@+id/view_main_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_jy_40"
            android:layout_height="@dimen/dp_jy_40"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/black_fh" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#4a4a4a"
            android:text="任务详情"
            android:textSize="@dimen/sp_20"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_10"
        android:background="#f5f5f5"
        android:layout_below="@id/head_title"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:cacheColorHint="#00ffffff"
        android:layout_marginLeft="@dimen/dp_jy_10"
        android:layout_marginRight="@dimen/dp_jy_10"
        android:layout_above="@+id/btn_commit_timer"
        />
    <Button
        android:id="@+id/btn_commit_timer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_45"
        android:layout_marginLeft="@dimen/dp_jy_10"
        android:layout_marginRight="@dimen/dp_jy_10"
        android:gravity="center"
        android:background="@drawable/copy_back"
        android:text="提交定时"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_jy_10"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>