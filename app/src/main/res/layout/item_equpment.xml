<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_jy_165"
    android:layout_height="@dimen/dp_jy_185"
    android:background="@color/white"
    android:id="@+id/rl_equitem"

    >

    <ImageView
        android:id="@+id/iv_eqp_lx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/equpment_lx"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginTop="@dimen/dp_jy_10"
        />
    <TextView
        android:id="@+id/iv_eqp_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可分享"
        android:textColor="@color/color_toblue"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_jy_12"
        android:layout_marginTop="@dimen/dp_jy_10"
        />
    <ImageView
        android:id="@+id/iv_eqp_pic"
        android:layout_below="@+id/iv_eqp_lx"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/equpment_add"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_eqp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_eqp_pic"
        android:layout_centerHorizontal="true"
        android:text="添加设备"
        android:textSize="@dimen/sp_15"
        android:textColor="#3e3e3e"
        android:layout_marginTop="@dimen/dp_jy_18"
        />
    <TextView
        android:id="@+id/tv_eqp_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电源开"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:textColor="@color/color_toblue"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/tv_eqp_name"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:layout_marginBottom="@dimen/dp_jy_14"
        />
    <ImageView
        android:id="@+id/iv_eqp_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/equpment_kgk"
        android:layout_alignBottom="@+id/tv_eqp_kg"
        android:layout_toRightOf="@+id/tv_eqp_kg"
        android:layout_marginLeft="@dimen/dp_jy_2"
        android:paddingBottom="@dimen/dp_jy_3"
        />
    <TextView
        android:id="@+id/tv_eqp_zx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_eqp_kg"
        android:text="在线"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_toblue"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="@dimen/dp_jy_12"
        />
</RelativeLayout>
