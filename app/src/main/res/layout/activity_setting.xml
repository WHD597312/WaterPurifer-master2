<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_main_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/li_main_bt"
            android:layout_below="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/iv_main_memu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:src="@mipmap/black_fh"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置"
                android:textSize="@dimen/sp_18"
                android:textColor="#333333"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:paddingLeft="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_set_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:layout_below="@+id/li_main_bt"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_set_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50">
        <TextView
            android:id="@+id/tv_set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知消息"
            android:layout_marginLeft="@dimen/dp_jy_12"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            />
        <ImageView
            android:id="@+id/iv_set_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sz_kgk"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_jy_12"
            />
        <View
            android:id="@+id/view_repir_1"
            android:layout_width="match_parent"
            android:background="#f5f5f5"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_set_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/rl_set_pic"
            >
            <TextView
                android:id="@+id/tv_set_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提醒声音"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/iv_set_sy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sz_kgk"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                 android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_set_cpass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:layout_below="@id/rl_set_type"
            >
            <TextView
                android:id="@+id/tv_repair_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:layout_marginLeft="@dimen/dp_jy_12"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_xzn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_jy_12"
                android:textSize="@dimen/sp_13"
                />
            <View
                android:id="@+id/view_repir_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"
                 android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


    </RelativeLayout>

    </RelativeLayout>

