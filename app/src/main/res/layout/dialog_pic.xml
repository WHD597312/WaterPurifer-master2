<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_jy_250"
    android:background="@drawable/bg_login"
    >

    <TextView
        android:id="@+id/tv_dia_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改头像"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:textColor="#4a4a4a"
        android:textSize="@dimen/sp_16"
        />
    <View
        android:id="@+id/view_bt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/tv_dia_bt"
        android:layout_marginTop="@dimen/dp_jy_20"
        />
    <RelativeLayout
        android:id="@+id/rl_dia_pz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:layout_below="@+id/view_bt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机拍照"
            android:textColor="#4a4a4a"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_jy_20"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_dia_bd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:layout_below="@+id/rl_dia_pz"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地相册"
            android:textColor="#4a4a4a"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</RelativeLayout>
