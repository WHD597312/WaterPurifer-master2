<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#44deff"
    android:layout_height="@dimen/dp_jy_50"
    android:id="@+id/rl_item_father"
    >

    <TextView
        android:id="@+id/tv_num"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_width="@dimen/dp_jy_25"
        android:layout_height="@dimen/dp_jy_25"
        android:text="1"
        android:gravity="center"
        android:textColor="#44deff"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/bg_main_itembj"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_num"
        android:layout_marginLeft="@dimen/dp_jy_10"
        android:text="PP棉滤芯"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        />
    <ImageView
        android:id="@+id/iv_main_xz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_bottom_item"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_jy_20"
        />
    <TextView
        android:id="@+id/tv_pens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_main_xz"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        />
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4DFFFFFF"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
