<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/dp_jy_13"
    android:layout_centerHorizontal="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:id="@+id/ll"
    android:layout_height="@dimen/dp_jy_100">

  <ProgressBar
      android:id="@+id/loader"
      android:layout_marginEnd="@dimen/dp_jy_5"
      android:layout_width="@dimen/dp_jy_45"
      android:layout_height="@dimen/dp_jy_45"/>
  <TextView
      android:layout_width="wrap_content"
      android:textAppearance="?android:textAppearanceSmall"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="@dimen/dp_jy_20"
      android:id="@+id/msg"
      android:layout_toEndOf="@+id/loader"
      android:layout_height="wrap_content"/>

</LinearLayout>