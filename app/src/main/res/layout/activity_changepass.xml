<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_main_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            />

        <LinearLayout
            android:id="@+id/li_main_bt"
            android:layout_below="@+id/view_main_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_50"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/iv_main_memu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:src="@mipmap/black_fh"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="修改密码"
                android:textSize="@dimen/sp_18"
                android:textColor="#333333"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:paddingLeft="@dimen/dp_jy_50"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </LinearLayout>
    <EditText
        android:id="@+id/et_change_xg1"
        android:background="@color/white"
        android:hint="输入当前密码"
        android:paddingLeft="@dimen/dp_jy_16"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:layout_below="@+id/li_main_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:layout_marginTop="@dimen/dp_jy_20"
        />
    <View
        android:layout_below="@+id/et_change_xg1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginRight="@dimen/dp_jy_20"
        />
    <EditText
        android:id="@+id/et_change_xg2"
        android:background="@color/white"
        android:hint="输入新密码"
        android:paddingLeft="@dimen/dp_jy_16"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:layout_below="@+id/et_change_xg1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_50"
        android:layout_marginTop="1dp"
        />
    <TextView
        android:id="@+id/tv_cha_bz1"
        android:layout_below="@+id/et_change_xg2"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码长度不少于6位，数字、字母均可"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/bt_chan_qd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_40"
        android:layout_below="@+id/tv_cha_bz1"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:layout_marginTop="@dimen/dp_jy_30"
        android:background="@drawable/bg_login1"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
    </RelativeLayout>

