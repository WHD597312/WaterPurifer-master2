<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_jy_250"
    android:background="@drawable/bg_login"
    >

    <TextView
        android:id="@+id/tv_dia_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除设备"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:textColor="#4a4a4a"
        android:textSize="@dimen/sp_18"
        />
    <TextView
        android:id="@+id/tv_dia_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dia_bt"
        android:layout_marginTop="@dimen/dp_jy_20"
        android:layout_marginLeft="@dimen/dp_jy_26"
        android:layout_centerHorizontal="true"
        android:text="是否删除设备？"
        android:textSize="@dimen/sp_14"
        android:layout_marginRight="@dimen/dp_jy_26"
        />
    <View
    android:id="@+id/view_dialog_1"
    android:layout_below="@+id/tv_dia_1"
    android:layout_marginTop="@dimen/dp_jy_20"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#f5f5f5"
    />
    <LinearLayout
        android:id="@+id/li_dial"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_40"
        android:layout_marginTop="@dimen/dp_jy_5"
        android:layout_below="@+id/view_dialog_1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_dialog_qx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="暂不删除"
            android:textColor="#4a4a4a"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_dialog_qd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="立即删除"
            android:textColor="@color/color_toblue"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

    </LinearLayout>
    <View
        android:id="@+id/view_dialog_2"
        android:layout_below="@+id/li_dial"
        android:layout_marginTop="@dimen/dp_jy_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
</RelativeLayout>
