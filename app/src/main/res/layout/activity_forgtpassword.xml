<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_bj"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/iv_for_fh"
        android:layout_width="@dimen/dp_jy_23"
        android:layout_height="@dimen/dp_jy_23"
        android:src="@mipmap/login_fh"
        android:layout_marginTop="@dimen/dp_jy_37"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:onClick="widgetClick"
        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login"
        android:layout_marginLeft="@dimen/dp_jy_12"
        android:layout_marginRight="@dimen/dp_jy_12"
        android:layout_marginTop="@dimen/dp_jy_141">


        <TextView
            android:id="@+id/tv_fg_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#333333"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_jy_32"
            android:layout_centerHorizontal="true"
            />


        <EditText
            android:id="@+id/et_fg_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_fg_phone"
            android:layout_alignTop="@+id/image_fg_phone"
            android:layout_marginLeft="@dimen/dp_jy_14"
            android:background="@null"
            android:layout_marginBottom="@dimen/dp_jy_5"
            android:hint="输入手机号码"
            android:inputType="phone"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/image_fg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fg_zh"
            android:layout_marginLeft="@dimen/dp_jy_28"
            android:layout_marginTop="@dimen/dp_jy_73"
            android:scaleType="centerInside"
            android:src="@mipmap/login_user" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et_fg_phone"
            android:layout_marginLeft="@dimen/dp_jy_27"
            android:layout_marginRight="@dimen/dp_jy_29"
            android:layout_marginTop="@dimen/dp_jy_1"
            android:background="@color/color_gray2" />

        <EditText
            android:id="@+id/et_fg_code"
            android:layout_width="@dimen/dp_jy_190"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_fg_phone"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/dp_jy_28"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/image_fg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_alignLeft="@+id/image_fg_phone"
            android:layout_marginTop="@dimen/dp_jy_28"
            android:scaleType="centerInside"
            android:src="@mipmap/login_yz" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_1"
            android:layout_alignRight="@id/et_fg_code"
            android:layout_below="@+id/et_fg_code"
            android:layout_marginLeft="@dimen/dp_jy_27"
            android:layout_marginRight="@dimen/dp_jy_30"
            android:layout_marginTop="@dimen/dp_jy_5"
            android:background="@color/color_gray2" />

        <Button
            android:id="@+id/btn_fg_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_jy_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_29"
            android:layout_alignBottom="@+id/et_fg_code"
            android:background="@drawable/bg_login_yz"
            android:text="获取验证码"
            android:textColor="@color/color_black"

            />


        <EditText
            android:id="@+id/et_fg_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_toRightOf="@+id/image_fg_pwd"
            android:layout_marginLeft="@dimen/dp_jy_14"
            android:layout_marginTop="@dimen/dp_jy_28"
            android:background="@null"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/image_fg_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="@dimen/dp_jy_29"
            android:layout_marginTop="@dimen/dp_jy_28"
            android:scaleType="centerInside"
            android:src="@mipmap/login_pass" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_1"
            android:layout_below="@+id/et_fg_password"
            android:layout_marginLeft="@dimen/dp_jy_27"
            android:layout_marginRight="@dimen/dp_jy_29"
            android:layout_marginTop="@dimen/dp_jy_5"
            android:background="@color/color_gray2" />


        <Button
            android:id="@+id/btn_fg_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:layout_marginLeft="@dimen/dp_jy_35"
            android:layout_marginRight="@dimen/dp_jy_35"
            android:layout_marginTop="@dimen/dp_jy_40"
            android:background="@drawable/bg_login1"
            android:gravity="center"
            android:text="立即修改"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18"
            android:layout_marginBottom="@dimen/dp_jy_50"

            />
    </RelativeLayout>

</RelativeLayout>