<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_jy_70">

    <ImageView
        android:id="@+id/iv_day_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/day_zs"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_jy_20"
        />
    <TextView
        android:id="@+id/tv_day_zs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="故障"
        android:layout_toRightOf="@+id/iv_day_pic"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:textColor="#DD5C39"
        android:textSize="@dimen/sp_15"
        />
    <TextView
        android:id="@+id/tv_day_sdsj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上电时间： 11:05"
        android:layout_toRightOf="@+id/tv_day_zs"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:textColor="#666666"

        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_day_gzyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="漏水"
        android:layout_toRightOf="@+id/iv_day_pic"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_jy_10"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_day_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天  11:05"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_jy_10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_jy_10"
        android:textColor="#bbbbbb"
        android:textSize="@dimen/sp_11"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:layout_centerVertical="true"
        >

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#f5f5f5"
    android:layout_toRightOf="@+id/iv_day_pic"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="@dimen/dp_jy_20"
    android:layout_marginLeft="@dimen/dp_jy_20"
    />

</RelativeLayout>