<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <View
        android:id="@+id/view_main_1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/li_main_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_60"
        android:layout_below="@+id/view_main_1"
        android:background="@color/white"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/iv_main_memu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_jy_60"
            android:scaleType="centerInside"
            android:src="@mipmap/black_fh" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收银台"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_repair_xq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_jy_50"
            android:scaleType="center" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/li_main_bt"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_jy_10"
        android:layout_below="@+id/view1"
        >
        <TextView
            android:id="@+id/tv_order_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_order_name"
            android:layout_alignBottom="@+id/tv_order_name"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:gravity="center_vertical"
            android:text="订单名称："
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_order_1"
            android:text="培厚净水-套餐购买"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_jy_12"
            />
        <TextView
            android:id="@+id/tv_order_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_order_time"
            android:layout_alignBottom="@+id/tv_order_time"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:gravity="center_vertical"
            android:text="套餐时间："
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_order_2"
            android:text="两个月"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_below="@+id/tv_order_1"
            android:layout_marginTop="@dimen/dp_jy_16"
            />
        <TextView
            android:id="@+id/tv_order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单信息"
            android:layout_alignTop="@+id/tv_order_time"
            android:layout_alignBottom="@+id/tv_order_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_30"

            />
        <TextView
            android:id="@+id/tv_order_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_order_amount"
            android:layout_alignBottom="@+id/tv_order_amount"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="套餐金额：" />

        <TextView
            android:id="@+id/tv_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_order_3"
            android:text="99.9元"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_below="@+id/tv_order_2"
            android:layout_marginTop="@dimen/dp_jy_16"
            android:layout_marginBottom="@dimen/dp_jy_10"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layout"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_jy_10"
        >
        <TextView
            android:layout_marginTop="@dimen/dp_jy_10"
            android:id="@+id/tv_order_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="请选择支付方式" />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_1"
            android:background="#f5f5f5"
            android:layout_below="@+id/tv_order_way"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_marginRight="@dimen/dp_jy_20"
            android:layout_marginTop="@dimen/dp_jy_10"
            />
        <ImageView
            android:id="@+id/img_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:src="@mipmap/img_zfb"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_marginTop="@dimen/dp_jy_10"
            />
        <TextView
            android:layout_below="@+id/view2"
            android:id="@+id/tv_order_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_zfb"
            android:layout_alignTop="@+id/img_zfb"
            android:layout_toRightOf="@+id/img_zfb"
            android:layout_marginLeft="@dimen/dp_jy_5"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="支付宝" />
        <CheckBox
            android:id="@+id/check_zhb"
            android:layout_width="@dimen/dp_jy_25"
            android:layout_height="@dimen/dp_jy_25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_30"
            android:scaleType="centerInside"
            android:background="@drawable/check_box"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_jy_7"
            android:button="@null"
            />
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_1"
            android:background="#f5f5f5"
            android:layout_below="@+id/tv_order_zfb"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_marginRight="@dimen/dp_jy_20"
            android:layout_marginTop="@dimen/dp_jy_10"
            />
        <ImageView
            android:id="@+id/img_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:src="@mipmap/img_wx"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_marginTop="@dimen/dp_jy_10"
            />
        <TextView
            android:id="@+id/tv_order_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_wx"
            android:layout_alignTop="@+id/img_wx"
            android:layout_toRightOf="@+id/img_wx"
            android:layout_marginLeft="@dimen/dp_jy_5"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="微信" />
        <CheckBox
            android:id="@+id/check_wx"
            android:layout_width="@dimen/dp_jy_25"
            android:layout_height="@dimen/dp_jy_25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_jy_30"
            android:scaleType="centerInside"
            android:background="@drawable/check_box"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/view3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_jy_7"
            android:button="@null"
            />
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_jy_1"
            android:background="@color/white"
            android:layout_below="@+id/tv_order_wx"
            android:layout_marginLeft="@dimen/dp_jy_20"
            android:layout_marginRight="@dimen/dp_jy_20"
            android:layout_marginTop="@dimen/dp_jy_10"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_jy_40"
        android:text="去支付"
        android:textColor="@color/white"
        android:background="@drawable/bg_pay"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_jy_20"
        android:layout_marginRight="@dimen/dp_jy_20"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_jy_20"
        />

</RelativeLayout>