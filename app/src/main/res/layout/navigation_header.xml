<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/nevigation_top"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top_pic"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_top_name"
        android:layout_below="@+id/iv_top_pic"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:text="那叫龙"
        android:textColor="#ffffff"
        />
    <TextView
        android:id="@+id/tv_top_phone"
        android:layout_below="@+id/tv_top_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_jy_12"
        android:layout_marginBottom="@dimen/dp_jy_30"
        android:textSize="@dimen/sp_12"
        android:text="13101665555"
        android:textColor="#ffffff"
        />
</RelativeLayout>
